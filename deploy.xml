		<!-- empty -->
	</resources>
	<configs>
		<precedes ext="smw" />

		<new>
			<function name="enableLinkedData">
			</function>
			<script file="extensions/LinkedData/maintenance/LOD_Setup.php" />
		</new>
		<uninstall>
			<script file="extensions/LinkedData/maintenance/LOD_Setup.php"
