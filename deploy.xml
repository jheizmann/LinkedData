<?xml version="1.0" encoding="UTF-8"?>
<deploydescriptor>
	<global>
		<version>120</version>
		<id>linkeddata</id>
		<vendor>ontoprise GmbH</vendor>
        <maintainer>ontoprise GmbH</maintainer>
		<license>GPL-v2</license>
		<instdir>extensions/LinkedData</instdir>
		<description>
			Use Linked Data in your wiki.
		</description>
		<helpurl>http://smwforum.ontoprise.com/smwforum/index.php/Help:Linked_Data_extension</helpurl>
		<dependencies>
			<dependency from="1150" to="1169">mw</dependency>
			<dependency from="101">scriptmanager</dependency>
			<dependency from="100" to="100">arclibrary</dependency>
			<dependency from="140" to="156">smw</dependency>
			<dependency from="152" to="156">smwhalo</dependency>
		</dependencies>
		<patchlevel>0</patchlevel>
	</global>
	<codefiles>
		<file loc="deploy.xml" />

		<!-- TODO: add others -->
	</codefiles>
	<wikidumps>
		<file loc="wikidumps/MetaDataXSLT.xml"/>
		<file loc="wikidumps/NEPTemplates.xml"/>
	</wikidumps>
	<resources>
		<!-- empty -->
	</resources>
	<configs>
		<precedes ext="smw" />

		<new>
			<require name="lod"
				file="extensions/LinkedData/includes/LOD_Initialize.php" />
		    <patch file="patch_for_SMW1.5.6.txt" ext="smw" from="156" to="156"/>
            <function name="enableLinkedData">
			</function>
			<script file="maintenance/LOD_Setup.php" />
		</new>
		<uninstall>
			<script file="maintenance/LOD_Setup.php"
				params="--delete" />
		</uninstall>
	</configs>
</deploydescriptor>